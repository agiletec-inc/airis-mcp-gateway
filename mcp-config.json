{
  "mcpGateway": {
    "addr": ":9090",
    "baseURL": "http://localhost:9090",
    "name": "Docker MCP Gateway",
    "version": "1.0.0",
    "type": "sse"
  },
  "mcpServers": {
    "__comment_builtin": "=== BUILT-IN SERVERS (enabled via --servers flag) ===",
    "__comment_builtin_list": "time, fetch, git, memory, sequentialthinking",

    "__comment_gateway_npx": "=== GATEWAY NPX SERVERS (no auth required) ===",
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspace/github"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from", "git+https://github.com/oraios/serena",
        "serena", "start-mcp-server",
        "--context", "ide-assistant",
        "--enable-web-dashboard", "false",
        "--enable-gui-log-window", "false"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "mcp-server-sqlite", "--db-path", "/app/data.db"]
    },

    "__comment_disabled": "=== DISABLED (auth required - enable via frontend UI) ===",
    "__comment_context7": "context7 moved to mcp.json (editor-side npx) - Docker version has bugs",
    "__disabled_brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "__disabled_github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "__disabled_mcp-postgres-server": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-postgres-server",
        "--dsn",
        "${POSTGRES_CONNECTION_STRING}"
      ]
    },
    "__disabled_stripe": {
      "command": "bash",
      "args": [
        "-c",
        "STRIPE_SECRET_KEY=$(cat /run/secrets/stripe_key 2>/dev/null || echo ${STRIPE_SECRET_KEY}) npx -y @stripe/mcp --tools=all"
      ]
    },
    "__disabled_twilio": {
      "command": "bash",
      "args": [
        "-c",
        "TWILIO_ACCOUNT_SID=$(cat /run/secrets/twilio_sid 2>/dev/null || echo ${TWILIO_ACCOUNT_SID}) TWILIO_API_KEY=$(cat /run/secrets/twilio_key 2>/dev/null || echo ${TWILIO_API_KEY}) TWILIO_API_SECRET=$(cat /run/secrets/twilio_secret 2>/dev/null || echo ${TWILIO_API_SECRET}) npx -y @twilio-alpha/mcp"
      ]
    },
    "__disabled_figma": {
      "command": "npx",
      "args": ["-y", "@hapins/figma-mcp"],
      "env": {
        "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}"
      }
    },
    "__disabled_slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    },
    "__disabled_sentry": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_ORG": "${SENTRY_ORG}"
      }
    }
  },
  "log": {
    "level": "debug"
  }
}
