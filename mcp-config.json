{
  "mcpGateway": {
    "addr": ":9090",
    "baseURL": "http://localhost:9090",
    "name": "Docker MCP Gateway",
    "version": "1.0.0",
    "type": "sse"
  },
  "mcpServers": {
    "context7": {
      "url": "http://docker-mcp-gateway-context7:3000/sse"
    },
    "stripe": {
      "command": "bash",
      "args": [
        "-c",
        "STRIPE_SECRET_KEY=$(cat /run/secrets/stripe_key) npx -y @stripe/mcp --tools=all"
      ]
    },
    "twilio": {
      "command": "bash",
      "args": [
        "-c",
        "TWILIO_ACCOUNT_SID=$(cat /run/secrets/twilio_sid) TWILIO_API_KEY=$(cat /run/secrets/twilio_key) TWILIO_API_SECRET=$(cat /run/secrets/twilio_secret) npx -y @twilio-alpha/mcp"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from", "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ]
    },
    "mcp-postgres-server": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-postgres-server",
        "--dsn",
        "${POSTGRES_CONNECTION_STRING:-postgresql://mcp_readonly:mcp_readonly_password@localhost:5432/postgres}"
      ]
    },
    "figma": {
      "url": "https://mcp.figma.com/mcp",
      "headers": {
        "Authorization": "Bearer ${FIGMA_ACCESS_TOKEN}"
      }
    }
  },
  "log": {
    "level": "debug"
  }
}
